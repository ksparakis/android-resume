<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pro_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="center"
                android:layout_marginBottom="-80dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Me"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_me" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Links"
                        android:layout_marginBottom="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <TextView
                        android:id="@+id/resume_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Resume"
                        android:layout_marginBottom="10dp"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/linkedin_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Linkedin"
                        android:layout_marginBottom="10dp"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>


                    <TextView
                        android:id="@+id/git_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Github"
                        android:layout_marginBottom="10dp"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/twitter_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:layout_marginBottom="10dp"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>


                    <TextView
                        android:id="@+id/insta_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:layout_marginBottom="10dp"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>



                    <TextView
                        android:id="@+id/sparakis_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="www.sparakis.com"
                        android:textColor="#34ace3"
                        android:textSize="18dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/forkCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fork Me On GitHub"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <ImageView
                        android:id="@+id/fork_me"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="center"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>
    </ScrollView>
